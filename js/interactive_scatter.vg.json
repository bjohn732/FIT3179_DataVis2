{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 665,
    "height": 400,
    "description": "Which Countries Have Trending Films in Their Netflix Libraries?",
    "data": {
        "url": "https://raw.githubusercontent.com/bjohn732/FIT3179_DataVis2/main/data/netflix_data_pt1.csv"
    },
    "params": [
        {
            "name": "Continent_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Africa",
                    "Asia",
                    "Europe",
                    "North America",
                    "South America"
                    ],
                "labels":[
                    "Show All",
                    "Africa",
                    "Asia",
                    "Europe",
                    "North America",
                    "South America"
                    ],
                "name": "Continent Selection: "
            
            }           
        },
        {
            "name": "Rating_Above",
            "value": 10,
            "bind": {
                "input": "range",
                "min": 10,
                "max": 90,
                "step": 5,
                "name": "IMDb Ratings Above:"
            }
        }
    ],
    "transform": [
        {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
        {"filter": "datum['IMDb Rating'] >= Rating_Above"},
        {"filter": "datum['IMDb Rating'] > 0"}
    ],
    "encoding": {
    "x": {
        "field": "IMDb Rating",
        "type": "quantitative",
        "axis": {"tickCount":8}
    },
    "y": {
        "aggregate": "count",
        "type": "quantitative",
        "title": "Trend Count",
        "axis": {"tickCount":8}

    }
    },
    "layer":[
        {
            "mark": {"type": "circle", "size": 50},
            "encoding": {
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                        "Africa",
                        "Asia",
                        "Europe",
                        "North America",
                        "South America"
                    ],
                    "range": ["#fac8af", "#eb9172", "#cf5246", "#ab162a", "#67001f"]  
                    }
                },
                "tooltip": [
                    {"field": "Title", "type": "nominal"},
                    {"field": "Genre", "type": "nominal"},
                    {"field": "Country", "type": "nominal", "title": "Origin"},
                    {"field": "IMDb Rating", "type": "quantitative"},
                    {"aggregate": "count", "type": "quantitative", "title": "Trend Count"
                    }
                ]
            }
        },
        {
            "transform": [
                {"filter": "(datum['IMDb Rating'] >= 90 && datum['Continent'] == 'Asia') || datum['Title'] == 'The Umbrella Academy' || datum['Title'] == 'Lucifer' || datum['Title'] == 'The Last Dance' || datum['Title'] == 'Project Power'"}
            ],
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": 20, "dy": -15, "xOffset": -16, "yOffset": 0,
                "fontSize": 12,
                "fontStyle": "italic" 
            },
            "encoding": {
                "text": {"field": "Title", "type": "nominal"},
                "color": {"value": "black"}
            }

        }
    ],
    "config": {
        "legend": {"labelFontSize": 11}
    }
}

   